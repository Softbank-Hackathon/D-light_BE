logging:
  level:
    root: info
    com.hackathon.melon: debug
    software.amazon.awssdk: warn

spring:
  datasource:
    url: jdbc:mysql://localhost:3306/Dlight?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
    username: root
    password: YOUR_MYSQL_PASSWORD_HERE
    driver-class-name: com.mysql.cj.jdbc.Driver
  jpa:
    hibernate:
      ddl-auto: create
    show-sql: true
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.MySQLDialect
  security:
    oauth2:
      client:
        registration:
          github:
            client-id: ${GITHUB_CLIENT_ID}
            client-secret: ${GITHUB_CLIENT_SECRET}
            scope: user:email, read:user
            redirect-uri: "{baseUrl}/login/oauth2/code/github"
            client-name: GitHub
        provider:
          github:
            user-name-attribute: id

# 애플리케이션 설정
app:
  oauth2:
    # OAuth2 로그인 성공 후 리다이렉트할 프론트엔드 URL
    # 개발: http://localhost:3000
    # 운영: https://your-frontend-domain.com
    redirect-uri: ${FRONTEND_URL:http://localhost:3000}
